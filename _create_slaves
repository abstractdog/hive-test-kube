P=gcp-hive-upstream
gcloud beta container --project "$P" node-pools create "slave-pool" \
	--cluster "hive-test-kube" --zone "us-central1-c" --node-version "1.15.9-gke.24"  \
	--machine-type "n1-standard-8" --image-type "COS" \
	--disk-type "pd-standard" --disk-size "100" --node-labels type=slave --metadata disable-legacy-endpoints=true \
	--scopes "https://www.googleapis.com/auth/devstorage.read_only","https://www.googleapis.com/auth/logging.write","https://www.googleapis.com/auth/monitoring","https://www.googleapis.com/auth/servicecontrol","https://www.googleapis.com/auth/service.management.readonly","https://www.googleapis.com/auth/trace.append" \
	--enable-autoscaling --min-nodes "0" --max-nodes "6" --enable-autoupgrade --enable-autorepair \
        --num-nodes 0 \
        --node-taints type=slave:PreferNoSchedule
